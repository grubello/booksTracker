<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AddBookActivity">


    <!-- ICON + BOOK DETAILS TITLE-->
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_book_120dp"
            android:id="@+id/imageView2"
            android:layout_marginStart="14dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="@string/bookAddTitle"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/addBookTitleEditText"
            android:id="@+id/textView"/>


    <!-- TITLE -->
    <TextView
            android:id="@+id/addBookTitleLabel"
            android:text="@string/bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="48dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>

    <EditText
            android:id="@+id/addBookTitleEditText"
            android:hint="@string/bookTitleHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="48dp"
            app:layout_constraintStart_toEndOf="@+id/addBookTitleLabel"
            app:layout_constraintBottom_toBottomOf="@+id/addBookTitleLabel"
            app:layout_constraintTop_toTopOf="@+id/addBookTitleLabel"/>


    <!-- AUTHOR -->
    <TextView
            android:id="@+id/addBookAuthorLabel"
            android:text="@string/bookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/addBookTitleLabel"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:id="@+id/addBookAuthorEditText"
            android:hint="@string/bookAuthorHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/addBookTitleEditText"
            app:layout_constraintTop_toTopOf="@+id/addBookAuthorLabel"
            app:layout_constraintBottom_toBottomOf="@+id/addBookAuthorLabel"/>


    <!-- ISBN -->
    <TextView
            android:id="@+id/addBookIsbnLabel"
            android:text="@string/bookIsbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/addBookAuthorLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <EditText
            android:id="@+id/addBookIsbnEditText"
            android:hint="@string/bookIsbnHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/addBookAuthorEditText"
            app:layout_constraintTop_toTopOf="@+id/addBookIsbnLabel"
            app:layout_constraintBottom_toBottomOf="@+id/addBookIsbnLabel"
            android:digits="0123456789"
            android:inputType="number"/>

    <!-- NUM OF PAGES -->
    <TextView
            android:id="@+id/addBookNumOfPagesLabel"
            android:text="@string/bookPages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/addBookIsbnLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <EditText
            android:id="@+id/addBookNumOfPagesEditText"
            android:hint="@string/bookPagesHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/addBookNumOfPagesLabel"
            app:layout_constraintBottom_toBottomOf="@+id/addBookNumOfPagesLabel"
            app:layout_constraintStart_toStartOf="@+id/addBookIsbnEditText"
            android:digits="0123456789"
            android:inputType="number"/>


    <!-- RATING -->
    <TextView
            android:id="@+id/addBookRatePagesLabel"
            android:text="@string/bookRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/addBookNumOfPagesLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <EditText
            android:id="@+id/addBookRateEditText"
            android:hint="@string/bookRatingHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/addBookNumOfPagesEditText"
            app:layout_constraintTop_toBottomOf="@+id/addBookNumOfPagesEditText"
            app:layout_constraintBottom_toBottomOf="@+id/addBookRatePagesLabel"
            android:digits="12345"
            android:inputType="number"/>


    <Button
            android:id="@+id/addBookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonAdd"
            android:layout_marginBottom="64dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addBookRatePagesLabel"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>