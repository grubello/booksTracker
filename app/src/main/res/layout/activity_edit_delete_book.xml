<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AddBookActivity">


    <!-- ICON + BOOK DETAILS TITLE-->
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_book_120dp"
            android:id="@+id/imageView2"
            android:layout_marginStart="14dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="@string/book_details_title"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/editBookTitleEditText"
            android:id="@+id/textView"/>


    <!-- TITLE -->
    <TextView
            android:id="@+id/editBookTitleLabel"
            android:text="@string/bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="48dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>

    <EditText
            android:id="@+id/editBookTitleEditText"
            android:hint="@string/bookTitleHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="48dp"
            app:layout_constraintStart_toEndOf="@+id/editBookTitleLabel"
            app:layout_constraintBottom_toBottomOf="@+id/editBookTitleLabel"
            app:layout_constraintTop_toTopOf="@+id/editBookTitleLabel"/>


    <!-- AUTHOR -->
    <TextView
            android:id="@+id/editBookAuthorLabel"
            android:text="@string/bookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editBookTitleLabel"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:id="@+id/editBookAuthorEditText"
            android:hint="@string/bookAuthorHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/editBookTitleEditText"
            app:layout_constraintTop_toTopOf="@+id/editBookAuthorLabel"
            app:layout_constraintBottom_toBottomOf="@+id/editBookAuthorLabel"/>


    <!-- ISBN -->
    <TextView
            android:id="@+id/editBookIsbnLabel"
            android:text="@string/bookIsbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editBookAuthorLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <EditText
            android:id="@+id/editBookIsbnEditText"
            android:hint="@string/bookIsbnHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/editBookAuthorEditText"
            app:layout_constraintTop_toTopOf="@+id/editBookIsbnLabel"
            app:layout_constraintBottom_toBottomOf="@+id/editBookIsbnLabel"
            android:digits="0123456789"
            android:inputType="number"/>

    <!-- NUM OF PAGES -->
    <TextView
            android:id="@+id/editBookNumOfPagesLabel"
            android:text="@string/bookPages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editBookIsbnLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <EditText
            android:id="@+id/editBookNumOfPagesEditText"
            android:hint="@string/bookPagesHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/editBookNumOfPagesLabel"
            app:layout_constraintBottom_toBottomOf="@+id/editBookNumOfPagesLabel"
            app:layout_constraintStart_toStartOf="@+id/editBookIsbnEditText"
            android:digits="0123456789"
            android:inputType="number"/>


    <!-- RATING -->
    <TextView
            android:id="@+id/editBookRatePagesLabel"
            android:text="@string/bookRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/editBookNumOfPagesLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

    <EditText
            android:id="@+id/editBookRateEditText"
            android:hint="@string/bookRatingHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/editBookNumOfPagesEditText"
            app:layout_constraintTop_toBottomOf="@+id/editBookNumOfPagesEditText"
            app:layout_constraintBottom_toBottomOf="@+id/editBookRatePagesLabel"
            android:digits="12345"
            android:inputType="number"/>


    <Button
            android:id="@+id/saveBookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonSave"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editBookRatePagesLabel"/>

    <Button
            android:id="@+id/removeBookButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buttonDelete"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/saveBookButton"
            app:layout_constraintTop_toTopOf="@+id/saveBookButton"/>


</androidx.constraintlayout.widget.ConstraintLayout>